<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:style="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/product_sans_bold"
            android:text="APEM (Aplikasi Preventive Maintenance)"
            android:textSize="20dp"
            android:textAlignment="center" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/holder_a_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_bold"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="Preventive Maintenance MCC AC"
                android:background="#001ade"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tanggal11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:textColor="#cf0000"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Tanggal"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/nama_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Nama Breaker    : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/nama_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/kks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="KKS                        : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/kks_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="70dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/unit_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Unit                        : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/unit_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/arus_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Arus Motor         : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/arus_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="130dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/kondisi_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="170dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Kondisi                 : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/kondisi_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="160dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/periksa_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Pemeriksa           : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/periksa_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="190dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/operator_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="230dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Operator/Regu : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/operator_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="220dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/temuan_breaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="260dp"
                android:fontFamily="@font/product_sans_reguler"
                android:text="Temuan                : "
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/temuan_breaker_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="250dp"
                android:ems="10"
                android:fontFamily="@font/product_sans_reguler"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:textColor="#252525"
                android:textSize="12dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/write_nfc"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:fontFamily="@font/product_sans_bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="NFC"
            android:textColor="#ffffff"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="12dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/write_firebase"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:fontFamily="@font/product_sans_bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Save"
            android:textColor="#ffffff"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >

        <ListView
            android:id="@+id/listViewNFC"
            android:layout_width="match_parent"
            android:clickable="true"
            android:divider="#00000000"
            android:layout_height="240dp"
            android:layout_gravity="bottom"
            >
        </ListView>
    </LinearLayout>

</LinearLayout>