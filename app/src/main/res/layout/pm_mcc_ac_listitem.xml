<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_list_pm"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tanggal_pm_mcc_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfuidisplay_light"
                android:text="Tanggal PM"
                android:textColor="@color/frg2Color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nama_gt_mcc_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfuidisplay_regular"
                android:text="GT"
                android:textColor="@color/frg2Color"
                app:layout_constraintEnd_toEndOf="@+id/tanggal_pm_mcc_ac"
                app:layout_constraintStart_toStartOf="@+id/tanggal_pm_mcc_ac"
                app:layout_constraintTop_toBottomOf="@+id/tanggal_pm_mcc_ac" />

            <TextView
                android:id="@+id/nama_pm_mcc_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfuidisplay_light"
                android:text="Personal PM"
                android:textColor="@color/frg2Color"
                app:layout_constraintEnd_toEndOf="@+id/tanggal_pm_mcc_ac"
                app:layout_constraintStart_toStartOf="@+id/tanggal_pm_mcc_ac"
                app:layout_constraintTop_toBottomOf="@+id/nama_gt_mcc_ac" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>