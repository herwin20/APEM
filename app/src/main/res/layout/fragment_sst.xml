                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:fontFamily="@font/product_sans_italic"
                                android:layout_marginTop="10dp"
                                android:text="-"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/OilGlassSst12"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:fontFamily="@font/product_sans_italic"
                                android:layout_marginTop="10dp"
                                android:text="-"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/fanSst12"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:fontFamily="@font/product_sans_italic"
                                android:layout_marginTop="10dp"
                                android:text="-"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/groundSst12"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:fontFamily="@font/product_sans_italic"
                                android:layout_marginTop="10dp"
                                android:text="-"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/bucholzSst12"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:fontFamily="@font/product_sans_italic"
                                android:layout_marginTop="10dp"
                                android:text="-"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                />

                            <TextView
