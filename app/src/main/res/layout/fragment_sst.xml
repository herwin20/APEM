                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:fontFamily="@font/product_sans_reguler"
                                android:gravity="center"
                                android:hint="Winding Temp." />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:startIconDrawable="@drawable/ic_temptrafo">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/indikatorlevelSst13"
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/product_sans_reguler"
                            android:gravity="center"
                            android:hint="Oil Level" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkSilicaSst13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Silica Gel Breather (>70%)" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkOilSst13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Breather Glass Oil (Bersih)" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkFanSst13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Fan Beroperasi (Ya) " />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkGroundSst13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Grounding (Kencang)" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkBucholzSst13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Aliran Minyak Bucholz" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkSumppumpSst13"
