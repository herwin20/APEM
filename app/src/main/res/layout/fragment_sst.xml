                            <TextView
                                android:id="@+id/silicaGelSst13"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:fontFamily="@font/product_sans_italic"
                                android:layout_marginTop="10dp"
                                android:text="-"
