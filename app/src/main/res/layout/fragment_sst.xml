                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:fontFamily="@font/product_sans_reguler"
                            android:gravity="center"
                            android:hint="Oil Level" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkSilicaSst12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Silica Gel Breather (>70%)" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkOilSst12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
                                android:text="Breather Glass Oil (Bersih)" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkFanSst12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/product_sans_reguler"
